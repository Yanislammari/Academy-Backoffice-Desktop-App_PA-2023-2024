<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" stylesheets="@../styles/feedback_view.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.academyproject.controllers.FeedbackViewController">
    <center>
        <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <children>
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Select User (Email)" />
                <ComboBox fx:id="emailComboBox" prefWidth="400.0" promptText="Select an email" />
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Subject" />
                <TextField fx:id="subjectTextField" prefWidth="400.0" promptText="Email subject" />
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Email Body" />
                <TextArea fx:id="bodyTextArea" prefHeight="200.0" prefWidth="400.0" promptText="Type your email content here..." wrapText="true" />
                <Button fx:id="sendButton" onAction="#sendEmailAction" prefWidth="150.0" styleClass="button" text="Send" />
            </children>
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <BorderPane.margin>
                <Insets left="150.0" top="50.0" />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
